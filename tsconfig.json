{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "target": "ESNext",
      "module": "ESNext",
      "plugins": [
         {
            "name": "next"
         }
      ],
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@prisma/*": ["prisma/*"],
         "@ui/*": ["src/components/ui/*"],
         "@shared/*": ["src/components/shared/*"],
         "@types/*": ["src/@types/*"]
      }
   },
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "prisma/seed.js"
   ],
   "exclude": ["node_modules"]
}
